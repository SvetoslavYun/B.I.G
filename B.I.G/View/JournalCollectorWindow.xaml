         <DataGridTextColumn Header="Удостоверение" Binding="{Binding certificate}" Width="*"/>
         <DataGridTextColumn Header="Жетон" Binding="{Binding token}" Width="*"/>
         <DataGridTextColumn Header="Бронежилет" Binding="{Binding power}" Width="*"/>-->
